<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubXamarin.UWP.UserControls">

    <DataTemplate x:Key="RepositoriesListViewTemplate">
        <StackPanel 
            HorizontalAlignment="Stretch"
            Padding="15"
            VerticalAlignment="Center">

            <TextBlock
                Style="{StaticResource SubtitleTextBlockStyle}" 
                Text="{Binding Name}"/>

            <TextBlock 
                Opacity="0.8"
                Text="{Binding Description}"
                Margin="0,5,0,0"
                Style="{StaticResource BaseTextBlockStyle}"/>

            <StackPanel
                Margin="0,5,0,0"
                Orientation="Horizontal">

                <TextBlock
                    Opacity="0.6"
                    Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                    Text="{Binding Language}"
                    Margin="0,0,10,0"
                    Style="{StaticResource CaptionTextBlockStyle}"/>

                <FontIcon
                    Opacity="0.6"
                    FontFamily="ms-appx:/Resources/Fonts/fontawesome-webfont.ttf#FontAwesome"
                    Glyph="&#xf005;"
                    Margin="0,0,1,0"
                    FontSize="15"/>

                <TextBlock
                    Opacity="0.6"
                    Text="{Binding StargazersCount}"
                    Style="{StaticResource CaptionTextBlockStyle}"/>

                <TextBlock
                    Opacity="0.6"
                    Text="Last Updated:"
                    Margin="10,0,2,0"
                    Style="{StaticResource CaptionTextBlockStyle}"/>

                <TextBlock
                    Opacity="0.6"
                    Text="{Binding UpdatedAt.DateTime, Converter={StaticResource DateTimeHumanizer}}"
                    Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
