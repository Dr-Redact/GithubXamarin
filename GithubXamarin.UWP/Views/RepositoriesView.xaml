<views:MvxWindowsPage
    x:Class="GithubXamarin.UWP.Views.RepositoriesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.WindowsUWP.Views"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <controls:PullToRefreshListView 
            x:Name="MainListView"
            ItemsSource="{Binding Repositories}"
            SelectionMode="Single"
            IsItemClickEnabled="True"
            HorizontalAlignment="Stretch"
            SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
            RefreshCommand="{Binding PullToRefreshDelegateCommand}">

            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="SelectionChanged">
                    <core:InvokeCommandAction Command="{Binding RepositoryClickCommand, Mode=TwoWay}" 
                                              CommandParameter="{Binding ElementName=MainListView, Path=SelectedItem}"/>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>

                <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel 
                        HorizontalAlignment="Stretch"
                        Padding="15"
                        VerticalAlignment="Center">
                        
                        <StackPanel 
                            Margin="0,0,0,0" 
                            Orientation="Horizontal">
                            
                            <TextBlock
                                Style="{StaticResource SubtitleTextBlockStyle}" 
                                Text="{Binding Name}"/>
                        </StackPanel>

                        <TextBlock 
                            Text="{Binding Description}"
                            Margin="0,5,0,0"
                            Style="{StaticResource BaseTextBlockStyle}"/>

                        <StackPanel
                            Margin="0,5,0,0" 
                            Orientation="Horizontal">
                            
                            <TextBlock 
                                Text="{Binding Language}"
                                Margin="0,0,10,0"
                                Style="{StaticResource CaptionTextBlockStyle}"/>
                            
                            <FontIcon
                                FontFamily="ms-appx:/Resources/Fonts/fontawesome-webfont.ttf#FontAwesome"
                                Glyph="&#xf005;"
                                Margin="0,0,1,0"
                                FontSize="15"/>
                            
                            <TextBlock
                                Text="{Binding StargazersCount}"
                                Style="{StaticResource CaptionTextBlockStyle}"/>
                            
                            <TextBlock
                                Text="Last Updated at:"
                                Margin="10,0,2,0"
                                Style="{StaticResource CaptionTextBlockStyle}"/>
                            
                            <TextBlock 
                                Text="{Binding UpdatedAt.DateTime}"
                                Style="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </controls:PullToRefreshListView>
        
        <CommandBar
            VerticalAlignment="Bottom">
            <AppBarButton Icon="Refresh"
                          Label="Refresh"
                          Command="{Binding RefreshCommand, Mode=TwoWay}"/>
        </CommandBar>
    </Grid>
</views:MvxWindowsPage>



